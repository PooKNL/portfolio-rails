<%= form_for @project do |f| %>
  <% if @project.errors.any? %>
    <h2><%= pluralize(@project.errors.count, "error") %> prevented this project from saving </h2>
    <ul>
      <% @post.errors.full_messages.each do |msg| %>
        <li> <%= msg %></li>
      <% end %>
    </ul>
    <% end %>

    <%= f.label :title %><br>
    <%= f.text_field :title %>

    <br>
    <br>

    <%= f.label :description, "Write your project here, please" %><br>
    <%= f.text_field :description %>

    <br>
    <br>

    <%= f.label :link, "URL to your project" %><br>
    <%= f.text_field :link %>

    <br>
    <br>

    <%= f.submit %>

  <% end %>
